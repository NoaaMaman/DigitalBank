@model WebApp.Models.DTOS.AccountDTO.CreateAccountDTO

<form asp-action="CreateAccount">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Account</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="FirstName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="FirstName" class="form-control"></textarea>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="LastName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="LastName" class="form-control"></textarea>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Email" class="form-control"></textarea>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="PhoneNumber" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="PhoneNumber" class="form-control"></textarea>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Pin" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Pin" class="form-control"></textarea>
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ConfirmPin" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="ConfirmPin" class="form-control"></textarea>
                <span asp-validation-for="ConfirmPin" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexAccount" asp-controller="Account" class="btn-primary btn from-control">Back to Accounts List...</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control"/>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}